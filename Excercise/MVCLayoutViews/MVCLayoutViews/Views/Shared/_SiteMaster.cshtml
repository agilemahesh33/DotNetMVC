
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mahesh - @ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div> 
        <table style="width:100%">
            <tr>
                <td align="center" style="background-color:aquamarine">                    
                    <img src="~/Images/Logo.png" style="height:100px; width:100px" class="rounded" />
                </td>
                <td>
                    <img src="~/Images/Header1.png" style="height:100px;width:100%" class="rounded" />
                </td>
            </tr>
            <tr>
                <td style="vertical-align:top; background-color:aquamarine">
                    <nav class="navbar-dark bg-primary">
                        <font size="4">
                            @Html.ActionLink("Home Page", "Home", "Employee", new { @Class = "navbar-brand" })
                            @Html.ActionLink("Registration Page", "Register", "Employee", new { @Class = "navbar-brand" })
                            @Html.ActionLink("Login Page", "Login", "Employee", new { @Class = "navbar-brand" })
                            @Html.ActionLink("Course Offered", "Courses", "Employee", new { @Class = "navbar-brand" })
                            @Html.ActionLink("About Us", "About", "Employee", new { @Class = "navbar-brand" })
                        </font>
                    </nav>
                </td>
                <td>
                    @RenderBody()
                </td>
            </tr>
            <tr>
                <td colspan="2" style="background-color:aquamarine; text-align:center">
                    @RenderSection("S1", false);
                </td>
            </tr>
            <tr>
                <td colspan="2" style="width:100%">
                    <img src="~/Images/Footer.png" style="width:100%;height:50px" class="rounded"/>
                </td>
            </tr>
        </table> 
    </div>
</body>
</html>
